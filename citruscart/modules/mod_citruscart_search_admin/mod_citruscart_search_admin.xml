<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.0"
	client="administrator">
	<name>Citruscart - Admin Search</name>
	<author>Citruscart Team</author>
	<authorEmail>support@citruscart.com</authorEmail>
  <authorUrl>http://citruscart.com</authorUrl>	<version>1.1.0</version>
	<creationDate>April 2014</creationDate>
	<copyright>Copyright (c) 2014 - 2019 Citruscart Private Ltd. All rights reserved.</copyright>
	<license>GNU General Public License</license>
	<description>MOD_CISTRUSCART_SEARCH_ADMIN_MODULEDESC</description>
	<files>
		<filename module="mod_citruscart_search_admin">mod_citruscart_search_admin.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB.mod_citruscart_search_admin.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="display_link" type="radio" default="0" label="MOD_CISTRUSCART_SEARCH_ADMIN_DISPLAY_DASHBOARD_LINK" description="MOD_CISTRUSCART_SEARCH_ADMIN_DISPLAY_DASHBOARD_LINK_DESC">
					<option value="0">MOD_CISTRUSCART_SEARCH_ADMIN_NO</option>
					<option value="1">MOD_CISTRUSCART_SEARCH_ADMIN_YES</option>
				</field>
				<field name="text" type="text" size="50" default="Citruscart Dashboard" label="MOD_CISTRUSCART_SEARCH_ADMIN_TEXT_LINK" description="MOD_CISTRUSCART_SEARCH_ADMIN_TEXT_LINK_DESC"></field>
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option
						value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
