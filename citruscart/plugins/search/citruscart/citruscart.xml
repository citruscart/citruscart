<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="search" method="upgrade">
	<name>Search - Citruscart</name>
	<version>0.10.1</version>
	<creationDate>October 2011</creationDate>
	<author>Citruscart</author>
	<authorEmail>info@Citruscart.com</authorEmail>
	<authorUrl>http://www.Citruscart.com</authorUrl>
	<copyright>2012 Citruscart.com</copyright>
	<license>GNU General Public License v2</license>
	<description>COM_CITRUSCART_ENABLES_SEARCHING_CITRUSCART_PRODUCTS_AND_CATEGORIES_IN_CORE_SEARCH_COMPONENT</description>
	<files>
		<filename plugin="citruscart">citruscart.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_search_citruscart.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" label="basic">
				<field name="title" type="text" size="50" default="Citruscart" label="COM_CITRUSCART_SEARCH_CATEGORY_TITLE" description="COM_CITRUSCART_SEARCH_CATEGORY_TITLE_DESC"/>
				<field name="title_wishlist" type="text" size="50" default="Citruscart -  Wishlists" label="COM_CITRUSCART_SEARCH_WISHLIST_TITLE" description="COM_CITRUSCART_SEARCH_WISHLIST_DESC"/>
				<field name="density_flag" type="radio" default="1" label="PLG_CITRUSCART_KEYWORD_DENSITY" description="COM_CITRUSCART_KEYWORD_DENSITY_DESC">
					<option value="0">COM_CITRUSCART_NO</option>
					<option value="1">COM_CITRUSCART_YES</option>
				</field>
				<field name="link_behaviour" type="radio" default="1" label="COM_CITRUSCART_LINK_BEHAVIOR" description="COM_CITRUSCART_LINK_BEHAVIOR_DESC">
					<option value="0">COM_CITRUSCART_OPEN_IN_THE_SAME_TAB</option>
					<option value="1">COM_CITRUSCART_OPEN_IN_A_NEW_TAB</option>
				</field>

			</fieldset>
		</fields>
	</config>

</extension>
