<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
	<name>System - Citruscart</name>
	<version>0.10.1</version>
	<creationDate>October 2011</creationDate>
	<author>Citruscart</author>
	<authorEmail>info@Citruscart.com</authorEmail>
	<authorUrl>http://www.Citruscart.com</authorUrl>
	<copyright>2012 Citruscart.com</copyright>
	<license>GNU General Public License v2</license>
	<description>Handles system events and overrides for Citruscart</description>
	<files>
		<filename plugin="citruscart">citruscart.php</filename>
		<folder>citruscart</folder>
		<filename>index.html</filename>
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_system_citruscart.ini</language>
		<language tag="en-GB">en-GB.plg_system_citruscart.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" label="basic">
				<field name="disable_error_reporting" type="radio" default="0" label="COM_CITRUSCART_DISABLE_ERROR_REPORTING" description="COM_CITRUSCART_DISABLE_ERROR_REPORTING_DESC">
					<option value="0">COM_CITRUSCART_NO</option>
					<option value="1">COM_CITRUSCART_YES</option>
				</field>
				<field name="site_override_user" type="radio" default="0" label="COM_CITRUSCART_OVERRIDE_SITE_USER" description="COM_CITRUSCART_OVERRIDE_SITE_USER_DESC">
					<option value="0">COM_CITRUSCART_NO</option>
					<option value="1">COM_CITRUSCART_YES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
